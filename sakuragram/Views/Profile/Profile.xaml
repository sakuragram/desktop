<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
	x:Name="DialogProfile"
    x:Class="sakuragram.Views.Profile.Profile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:user="using:sakuragram.Controls.User"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    Width="450"
    Height="550"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center">
	
	<ScrollViewer MaxHeight="550">
		<StackPanel>
			<!--- User info -->
			<Grid ColumnDefinitions="Auto, *">
				<user:ProfilePhoto x:Name="ProfilePhoto"
				                   Grid.Column="0"
				                   Margin="0, 0, 10, 0"/>
				<StackPanel Grid.Column="1">
					<TextBlock x:Name="TextBlockUsername"
					           FontSize="18"
					           MaxLines="1"
					           Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
					<TextBlock x:Name="TextBlockStatus"
					           FontSize="10"
					           Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
				</StackPanel>
			</Grid>
			<MenuFlyoutSeparator Margin="4"
			                     x:Name="SeparatorPersonalChat"/>
			<!--- Channel info -->
			<Grid ColumnDefinitions="Auto, *"
			      x:Name="GridPersonalChatInfo">
				<user:ProfilePhoto x:Name="PhotoPersonalChat"
				                   Grid.Column="0"
				                   VerticalAlignment="Center"
				                   Margin="0, 0, 10, 0" />
				<StackPanel Grid.Column="1"
				            VerticalAlignment="Center">
					<TextBlock x:Name="TextBlockPersonalChatTitle"
					           FontSize="12"
					           Foreground="{StaticResource TextFillColorPrimaryBrush}"
					           MaxLines="1"/>
					<TextBlock x:Name="TextBlockLastMessage"
					           FontSize="10"
					           Foreground="{StaticResource TextFillColorTertiaryBrush}"
					           MaxLines="1"/>
					<TextBlock Text="Channel"
					           FontSize="10"
					           Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
				</StackPanel>
			</Grid>
			<MenuFlyoutSeparator Margin="4"/>
			<controls:SettingsCard x:Name="CardMobile"
			                       Description="Mobile"
			                       Width="350"/>
			<controls:SettingsCard x:Name="CardUsername"
			                       Description="Username"
			                       Width="350"/>
			<controls:SettingsCard x:Name="CardBio"
			                       Description="Bio"
			                       Width="350"/>
			<controls:SettingsExpander x:Name="ExpanderBusinessHours"
			                           Description="Business hours"
			                           Width="350"/>
			<controls:SettingsCard x:Name="CardDateOfBirth"
			                       Description="Date of Birth"
			                       Width="350"/>
			<controls:SettingsCard x:Name="CardLocation"
			                       Description="Location"
			                       Width="350"/>
			<controls:SettingsCard x:Name="CardChatId"
			                       Description="ID"
			                       Width="350"/>
			<controls:SettingsCard x:Name="CardNotification"
			                       Header="Notification"
			                       Width="350">
				<ToggleSwitch x:Name="SwitchNotifications"
				              OnContent=""
				              OffContent=""/>
			</controls:SettingsCard>
			<MenuFlyoutSeparator Margin="4"
			                     x:Name="SeparatorChatMedia"/>
			<controls:SettingsExpander x:Name="ExpanderMediaElementsCount"
			                           Header="Media"/>
			<MenuFlyoutSeparator Margin="4"
			                     x:Name="SeparatorChatMembers"/>
			<controls:SettingsExpander x:Name="ExpanderMembers" 
			                           Header="Members"/>
		</StackPanel>
	</ScrollViewer>
	
</ContentDialog>