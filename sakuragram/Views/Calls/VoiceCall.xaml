<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="sakuragram.Views.Calls.VoiceCall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	
	<RelativePanel>
		<StackPanel Orientation="Horizontal" 
		            Margin="5"
		            RelativePanel.AlignBottomWithPanel="True"
		            RelativePanel.AlignHorizontalCenterWithPanel="True">
			<Button x:Name="ButtonMute" Content="Mute" Click="ButtonMute_OnClick" Margin="0,0,5,0"/>
			<Button x:Name="ButtonShareScreen" Content="Share screen" Click="ButtonShareScreen_OnClick" 
			        Margin="0,0,5,0"/>
			<Button x:Name="ButtonEnableVideo" Content="Enable video" Click="ButtonEnableVideo_OnClick"
			        Margin="0,0,5,0"/>
			<Button x:Name="ButtonEndCall" Content="End" Click="ButtonEndCall_OnClick"/>
		</StackPanel>
		
	</RelativePanel>
	
</Window>